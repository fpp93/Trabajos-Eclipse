package HilosInterfaz;

import java.io.IOException;

public class HilosEjemplo implements Runnable {
	
	Thread hilo;
	boolean suspender;
	boolean pausar;
	
	 HilosEjemplo (String nombre){
	        hilo=new Thread(this,nombre);
	        suspender=false;
	        pausar=false;
	    }

	@Override
	public void run() {
		// TODO Auto-generated method stub
		if(Thread.currentThread().getName().equalsIgnoreCase("corredor-1")) {
			for(int i = 0; i<=10;i++) {
				System.out.print(Thread.currentThread().getName()+" "+ "-");
				
				}
			System.out.println("\n");
			try {
				Runtime.getRuntime().exec("cls");
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		if(Thread.currentThread().getName().equalsIgnoreCase("corredor-2")) {
			for(int i = 0; i<=10;i++) {
				System.out.print(Thread.currentThread().getName()+" "+ "-");
					
				}
			System.out.println("\n");
			try {
				Runtime.getRuntime().exec("cls");
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		if(Thread.currentThread().getName().equalsIgnoreCase("corredor-3")) {
			for(int i = 0; i<=10;i++) {
				System.out.print(Thread.currentThread().getName()+" "+ "-");
					
				}
			System.out.println("\n");
			try {
				Runtime.getRuntime().exec("cls");
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
			
		}
	public static HilosEjemplo crearEIniciar(String nombre){
        HilosEjemplo miHilo=new HilosEjemplo(nombre);
        miHilo.hilo.start(); //Iniciar el hilo
        return miHilo;
    }
	//Pausar el hilo
    synchronized void pausarhilo(){
        pausar=true;
        //lo siguiente garantiza que un hilo suspendido puede detenerse.
        suspender=false;
        notify();
    }
	}

	
	

