package Ejercicio3;

public class HiloPar extends Thread {
	
	
	
	
	
	
	public HiloPar() {
		
	
	}
	
	int suma =0;
	public void run() {
		
		for(int i=0;i<=6;i++) {
			int par=(int)(Math.random()*20+1);
			if(par%2!=0) {
				par++;
				System.out.println(this.getName()+":Ha generado el numero:"+par);
			}
			suma=suma+par;
		}
		System.out.println(this.getName()+":la suma de los numeros es:"+suma);
		
	}
	

}
