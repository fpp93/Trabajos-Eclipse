package Ejercicio2;



public class Main {

	public static void main(String[] args)throws InterruptedException {
		// TODO Auto-generated method stub
		
		 
		 
		
		int velocidad=(int)Math.random()*1+10;
		Atletas hilo1= new Atletas(velocidad);
		hilo1.setName("Greene");
		velocidad=(int)Math.random()*1+10;
		Atletas hilo2= new Atletas(velocidad);
		hilo2.setName("Johnson");
		velocidad=(int)Math.random()*1+10;
		Atletas hilo3= new Atletas(velocidad);
		hilo3.setName("Bolt");
		
		
		System.out.println("Inicio de la carrera");
		hilo1.start();
		hilo1.join();
		hilo2.start();
		hilo2.join();
		hilo3.start();
		
		System.out.println("Fin de la carrera");

	}

}
