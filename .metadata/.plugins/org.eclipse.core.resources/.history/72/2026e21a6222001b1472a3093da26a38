package Ejercicio2;

public class Atletas extends Thread {
	
	
	
	public  Atletas(int velocidad){
		
		
	}
	
	
	public void run() {
		
		int velocidad=(int)Math.random()*1+5;
		System.out.println(getName());
		
		for(int i = 0; i<=velocidad;i++) {
			
			if(i==5) {
				
			}
			System.out.print("-");
			
			try {
				Thread.sleep(1000);
				
			}catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
		System.out.println();
		
	}

}
